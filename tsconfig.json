{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": false,
    "isolatedModules": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@/*": [ // / to begin with.
        "./src/*"
      ]
    },
  }
}